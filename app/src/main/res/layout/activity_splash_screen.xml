<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.ingerikahumada.etnoapp.SplashScreen">

    <ImageView
        android:id="@+id/fullscreen_content"
        android:src="@mipmap/logo_parafondorojo"
        android:layout_gravity="center|top"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:keepScreenOn="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/edt_text_correo_splash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="correo"
            android:layout_margin="1dp"
            android:background="@color/primary_light"
            android:drawableRight="@mipmap/iconocorreo"/>
        <EditText
            android:id="@+id/edt_text_nombre_splash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="nombre de usuario"
            android:layout_margin="1dp"
            android:background="@color/primary_light"
            android:drawableRight="@mipmap/iconousuario"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button_entrar_splash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@drawable/editextshape"
                android:textAllCaps="false"
                android:text="@string/entrar"
                android:textColor="@color/primary_light"/>

            <Button
                android:id="@+id/button_registrar_splash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@drawable/editextshape"
                android:textAllCaps="false"
                android:text="@string/registro"
                android:textColor="@color/primary_light"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
